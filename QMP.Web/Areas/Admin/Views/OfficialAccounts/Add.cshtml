@model QMP.ViewModels.OfficialAccounts_ViewModel

@{
    ViewBag.Title = "添加公众号";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}




<br />
<ol class="breadcrumb">
    <li><a href="~/Admin"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;Admin</a></li>
    <li><a href="~/Admin/OfficialAccounts/List"><span class="glyphicon glyphicon-list"></span>&nbsp;&nbsp;OfficialAccounts</a></li>
    <li class="active"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Add</li>
</ol>

<div class="panel panel-info">
    <div class="panel-heading">Add</div>
    <div class="panel-body">

        @using (Html.BeginForm("Add", "OfficialAccounts", new { Area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger alert-dismissable" })







            <div class="form-group">
                @Html.LabelFor(model => model.WeiXinName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.WeiXinName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WeiXinName)

                </div>
            </div>





            <div class="form-group">
                @Html.LabelFor(model => model.OriginalID, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.OriginalID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OriginalID)

                </div>
            </div>





            <div class="form-group">
                @Html.LabelFor(model => model.WeiXinNumber, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.WeiXinNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WeiXinNumber)

                </div>
            </div>





            <div class="form-group">
                @Html.LabelFor(model => model.AppID, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.AppID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AppID)

                </div>
            </div>





            <div class="form-group">
                @Html.LabelFor(model => model.AppSecret, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.AppSecret, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AppSecret)

                </div>
            </div>





        




            <div class="form-group">
                @Html.LabelFor(model => model.WebSiteTitle, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.WebSiteTitle, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WebSiteTitle)

                </div>
            </div>



            <div class="form-group">
                <div class="col-md-11 col-md-offset-1">
                    <button type="submit" class="btn btn-primary">提交</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
