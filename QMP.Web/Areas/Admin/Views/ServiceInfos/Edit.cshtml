            lang: "zh-CN",
            toolbar: [
                //['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'clear']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                //['height', ['height']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'hr']],
                //['view', ['fullscreen', 'codeview']],
                //['help', ['help']]
            ]
            //onImageUpload: SummerNoteUploadPointImages
        });
</script>

}
