@model IEnumerable<QMP.Models.Oracle.YTHPT_EMERGENCY_WEATHER>
@{
    ViewBag.Title = "Map";
    Layout = "~/Areas/WeiXin/Views/Shared/_Layout.cshtml";
}

<div id="mapcontainer" style="width: 100%; height: 100%;">
</div>
<div id="emergencyweatherdiv">
   @foreach (var item in Model)
   {
       <div style="width: 100%;background-color:rgba(0, 148, 255, 0.53);margin:3px;  padding: 15px;">
           <p><strong>@item.EMERGENCY</strong></p>
           <p>@item.RELEASETIME</p>
           <p>@item.CONTENT</p>
       </div>
    <div style="width: 100%;background-color:rgba(0, 148, 255, 0.53);margin:3px;  padding: 15px;">
        <p><strong>@item.EMERGENCY</strong></p>
        <p>@item.RELEASETIME</p>
        <p>@item.CONTENT</p>
    </div>
   }
</div>
@section Scripts{
    <style type="text/css">
        .table-marker {

            width: 100px;
            background-color: rgba(255, 106, 0, 0.55);
        }
        .table-marker td {
            padding: 2px 5px;
        }
        #emergencyweatherdiv { 
            width:300px;
            position: absolute;
            top: 50px;
            right:50px;
            
          
        }
    </style>
    <script type="text/javascript" src="http://webapi.amap.com/maps?v=1.3&key=4e6fb107331302e5167ccd3888684981"></script>
    <script type="text/javascript">
        var district,
            map = new AMap.Map('mapcontainer',
            {
                //resizeEnable: true,
                //rotateEnable: true,
                dragEnable: true,
                zoomEnable: true,
                //设置可缩放的级别
                //zooms: [3,18],
                //传入2D视图，设置中心点和缩放级别
                //view: new AMap.View2D({
                //    center: new AMap.LngLat(120.002224, 36.283607),
                //    zoom: 10
                //}),
                //初始化时，加载google地图
                //layers: [new AMap.TileLayer({
                //    tileUrl: "http://mt{1,2,3,0}.google.cn/vt/lyrs=m@142&hl=zh-CN&gl=cn&x=[x]&y=[y]&z=[z]&s=Galil" //取图地址
                //})]
            });

        var currentcity = '城阳区';
        map.setCity(currentcity);
        //在地图中添加ToolBar插件
        map.plugin(["AMap.ToolBar"],
            function() {
                var toolBar = new AMap.ToolBar();
                map.addControl(toolBar);

            });


        var AddMarker = function(lng, lat, data) {


            var marker = new AMap.Marker({
                icon: "../../Content/images/local.png",
                //icon: "../../../../Content/images/iconfont-dingwei32.png",
                offset: new AMap.Pixel(-16, -28),
                position: new AMap.LngLat(lng, lat),
                extData: data,
                topWhenClick: true

            });
            marker.setMap(map); //在地图上添加点


            var htmlstr = ""; //width:60px;height:30px;


            //htmlstr += "<table style='border-collapse: collapse;'>";
            //htmlstr += "<tr><td style='border:1px solid rgba(235, 79, 56, 0.81);background-color:rgba(235, 79, 56, 0.81); color: white; text-align: center;padding:0 2px;font-size:12px;word-break:keep-all;white-space:nowrap;'>" + data.StaName + "</td></tr>";
            //htmlstr += "<tr><td style='border:1px solid rgba(235, 79, 56, 0.81);background-color:rgba(255, 255, 255, 0.81);text-align: center;padding:0 2px;font-size:12px;word-break:keep-all;white-space:nowrap;'>" + data.Value + " mm</td></tr></table>";


            htmlstr += "<table class='table-marker' style='font-size: 12px;'><tr><td colspan='2'>" +
                data.STANAME +
                "</td></tr><tr><td>温度:</td><td>" +
                data.TEMPERATURE +
                " ℃</td></tr><tr><td>风速:</td><td>" +
                data.DWSPEED +
                " m/s</td></tr><tr><td>降水:</td><td>" +
                data.HRAIN +
                " mm</td></tr></table>";


            var markerhtml = new AMap.Marker({
                offset: new AMap.Pixel(15, -30),

                content: htmlstr,
                title: data.StaName,
                extData: data,
                position: new AMap.LngLat(lng, lat),

                topWhenClick: true

            });
            markerhtml.setMap(map); //在地图上添加点


            //鼠标点击marker弹出自定义的信息窗体
            AMap.event.addListener(marker,
                'click',
                function(e) {
                    //console.log(e)
                    //console.log(marker)
                    console.log(marker.getExtData())
                    var edata = marker.getExtData();


                    var content = "<table style='font-size: 12px;'><tr><td>站点:</td><td>" +
                        edata.STANAME +
                        "</td></tr><tr><td>温度:</td><td>" +
                        edata.TEMPERATURE +
                        " ℃</td></tr><tr><td>风速:</td><td>" +
                        edata.DWSPEED +
                        " m/s</td></tr><tr><td>降水:</td><td>" +
                        edata.HRAIN +
                        " mm</td></tr></table>";
                    infoWindow.setContent(content);
                    infoWindow.open(map, marker.getPosition());


                });
            //鼠标点击marker弹出自定义的信息窗体
            AMap.event.addListener(markerhtml,
                'click',
                function(e) {
                    //console.log(e)
                    //console.log(marker)
                    console.log(marker.getExtData());
                    var edata = marker.getExtData();


                    var content = "<table style='font-size: 12px;'><tr><td>站点:</td><td>" +
                        edata.STANAME +
                        "</td></tr><tr><td>温度:</td><td>" +
                        edata.TEMPERATURE +
                        " ℃</td></tr><tr><td>风速:</td><td>" +
                        edata.DWSPEED +
                        " m/s</td></tr><tr><td>降水:</td><td>" +
                        edata.HRAIN +
                        " mm</td></tr></table>";
                    infoWindow.setContent(content);
                    infoWindow.open(map, marker.getPosition());


                });

        }


        $(function() {
            $.ajax({
                type: "GET",
                url: "../../WeiXin/Emergency/_GetSkListJson",
                //data: "city="+currentcity,
                dataType: "json",
                success: function(data) {
                    console.log(data);


                    var datalist = data.DataList;

                    $(datalist)
                        .each(function(index, element) {
                            AddMarker(element.LON, element.LAT, element);

                        });
                }
            });
        });

        //实例化信息窗体
        var infoWindow = new AMap.InfoWindow({
            //isCustom: true,  //使用自定义窗体
            //content: info
            offset: new AMap.Pixel(0, -32) //-113, -140
        });


        //关闭信息窗体
        function closeInfoWindow() {
            map.clearInfoWindow();
        }

        addCountry();

        function addCountry() {
            //加载行政区划插件
            AMap.service('AMap.DistrictSearch',
                function() {
                    var opts = {
                        subdistrict: 1, //返回下一级行政区
                        extensions: 'all', //返回行政区边界坐标组等具体信息
                        level: 'city' //查询行政级别为 市
                    };
                    //实例化DistrictSearch
                    district = new AMap.DistrictSearch(opts);
                    district.setLevel('district');
                    //行政区查询
                    district.search(currentcity,
                        function(status, result) {
                            var bounds = result.districtList[0].boundaries;
                            var polygons = [];
                            if (bounds) {
                                for (var i = 0, l = bounds.length; i < l; i++) {
                                    //生成行政区划polygon
                                    var polygon = new AMap.Polygon({
                                        map: map,
                                        strokeWeight: 1.5,
                                        path: bounds[i],
                                        fillOpacity: 0,
                                        fillColor: '#CCF3FF',
                                        strokeColor: '#ff0000'
                                    });
                                    polygons.push(polygon);
                                }
                                // map.setFitView();//地图自适应
                            }
                        });
                });
        }

    </script>
}


