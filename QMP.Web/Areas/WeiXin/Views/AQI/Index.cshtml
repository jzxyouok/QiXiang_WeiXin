        var GetColor = function (value) {
            if (value >= 0 && value < 50) {
                return "6ec129";
            } else if (value >= 50 && value < 100) {
                return "e0cf22";

            } else if (value >= 100 && value < 150) {
                return "fd5b30";

            } else if (value >= 150 && value < 200) {
                return "e10724";

            } else if (value >= 200 && value < 300) {
                return "8f0c50";

            } else if (value >= 300 && value < 500) {
                return "410468";
            }
            return "6ec129";
        }

