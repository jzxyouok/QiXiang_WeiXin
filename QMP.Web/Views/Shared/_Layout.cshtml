<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")


    <link href="~/Scripts/startbootstrap-sb-admin-1.0.4/css/sb-admin.css" rel="stylesheet" />
    <link href="~/Scripts/startbootstrap-sb-admin-1.0.4/css/plugins/morris.css" rel="stylesheet" />
    <link href="~/Scripts/startbootstrap-sb-admin-1.0.4/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

</head>

<body>

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new {Area = "Admin"})">
                    <i class="fa fa-fw fa-wechat"></i>
                    @Html.Action("_LayoutTitle","Home",new{Area="Admin"})
                </a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                @Html.Partial("_LoginPartial")
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="active">
                        <a href="@Url.Action("List", "WeatherInfos", new {Area = "Admin"})"><i class="fa fa-fw fa-dashboard"></i> 三天预报</a>
                    </li>
                     <li>
                        <a href="@Url.Action("List", "ShortNearInfos", new { Area = "Admin" })"><i class="fa fa-fw fa-bar-chart-o"></i> 短时临近预报</a>
                    </li>
                    <li>
                        <a href="@Url.Action("List", "WarnInfos", new { Area = "Admin" })"><i class="fa fa-fw fa-bar-chart-o"></i> 预警信号</a>
                    </li>
                    <li>
                        <a href="@Url.Action("List", "ServiceInfos", new {Area = "Admin"})"><i class="fa fa-fw fa-table"></i> 气象服务</a>
                    </li>
                    <li>
                        <a href="@Url.Action("List", "Messages", new {Area = "Admin"})"><i class="fa fa-fw fa-tasks"></i> 消息记录</a>
                    </li>
                    <li>
                        <a href="@Url.Action("MapList","Subscribes",new{Area="Admin"})"><i class="fa fa-fw fa-map-marker"></i> 关注用户管理</a>
                    </li>
                    @*<li>
                            <a href="@Url.Action("List","WeatherInfos",new{Area="Admin"})"><i class="fa fa-fw fa-edit"></i> 粉丝管理</a>
                        </li>*@
                    @*<li>
                            <a href="@Url.Action("List","WeatherInfos",new{Area="Admin"})"><i class="fa fa-fw fa-desktop"></i>用户管理</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Menu",new{Area="Admin"})"><i class="fa fa-fw fa-wechat"></i>系统设置</a>
                        </li>*@

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">

                @RenderBody()
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")

  
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/startbootstrap-sb-admin-1.0.4/js/plugins/morris/raphael.min.js"></script>
    @*<script src="~/Scripts/startbootstrap-sb-admin-1.0.4/js/plugins/morris/morris.min.js"></script>
        <script src="~/Scripts/startbootstrap-sb-admin-1.0.4/js/plugins/morris/morris-data.js"></script>*@


</body>
</html>
